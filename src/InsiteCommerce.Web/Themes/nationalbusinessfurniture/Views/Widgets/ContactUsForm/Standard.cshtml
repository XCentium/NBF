<div ng-controller="ContactUsController as vm" class="widget-contactform" ng-cloak>
    <div class="cf-form [[Model.CssClass]]">
        <form id="contactUsForm" action="[% urlFor '/ContactUs/Submit?EmailTo='%][[Model.EmailToValue]]" method="post" ng-submit="vm.submit($event)">
            <div class="required-msg"><span class="redTxt">*</span> [% translate 'Required' %]</div>
            <div class="row cf-form-firstname">
                <label for="firstName[[Model.ContentKey]]">[% translate 'First Name' %]</label>
                <input type="text" name="FirstName" id="firstName[[Model.ContentKey]]"/>
            </div>
            <div class="row cf-form-lastname">
                <label for="lastName[[Model.ContentKey]]">[% translate 'Last Name' %]</label>
                <input type="text" name="LastName" id="lastName[[Model.ContentKey]]"/>
            </div>
            <div class="row cf-form-email">
                <label for="emailAddress[[Model.ContentKey]]">[% translate 'Email Address' %] <span class="redTxt">*</span></label>
                <input type="text" name="EmailAddress" id="emailAddress[[Model.ContentKey]]" data-rule-required="true" data-msg-required="[[Model.EmailIsRequiredErrorMessage]]" data-val="true"
                       data-rule-regex="[[Model.EmailAddressRegexPattern]]"
                       data-msg-regex="[[Model.EmailIsInvalidErrorMessage]]" />
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="EmailAddress"></span>                
            </div>
            <div class="row cf-form-topic">
                <label for="topic[[Model.ContentKey]]">[% translate 'Topic' %] <span class="redTxt">*</span></label>
                <select id="topic[[Model.ContentKey]]" name="Topic" data-rule-required="true" data-msg-required="[[Model.TopicIsRequiredErrorMessage]]" data-val="true">
                    <option value="">[% translate 'Select Topic' %]</option>
                    [% for topic in Model.Topics -%]
                        <option>[[topic]]</option>
                    [% endfor -%]
                </select>
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Topic"></span>
            </div>
            <div class="row cf-form-msg">
                <label>[% translate 'Message' %] <span class="redTxt">*</span></label>
                <textarea id="message[[Model.ContentKey]]" name="Message" rows="5" cols="48" data-rule-required="true" data-msg-required="[[Model.MessageIsRequiredErrorMessage]]" data-val="true"></textarea>
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Message"></span>
            </div>
            <div ng-show="!vm.submitted" class="btns">
                <button id="tst_contactUsPage_send" type="submit" class="btn primary btn-send">[% translate 'Send' %]</button>
            </div>
            <div ng-show="vm.submitted" id="tst_contactUsPage_successMessage" class="successMessage">
                [[Model.SuccessMessage]]
            </div>
        </form>
    </div>
</div>