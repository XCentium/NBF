[% if Model.Drop.RootPageExists -%]
<li class="[[Model.CssClass]]">
    <span class="nav-item-container">
        [% if Model.LinkRootPage -%]
        <a id="tst_productMenu_[[Model.Drop.RootPageTitle]]" href="[[Model.RootPageUrl]]">[[Model.Drop.RootPageTitle]]</a>
        [% else -%]
        <a id="tst_productMenu_[[Model.Drop.RootPageTitle]]" onclick="$(this).next().click();return false;">[[Model.Drop.RootPageTitle]]</a>
        [% endif %]
        <label for="nav-cat_[[Model.Id]]" class="toggle-sub" onclick="insite.nav.goToSubnav(this)">►</label>
    </span>
    <input type="checkbox" name="nav" id="nav-cat_[[Model.Id]]" class="subnav-check">
    <div id="sub-cat" class="subnav sub-tier-panel single">
        [% if Model.TextExists -%]
        <h4>[[Model.Text]]</h4>
        [% endif -%]
        <ul class="level-2">
            <li class="sub-heading">[[Model.Drop.RootPageTitle]]</li>
            [% for childPage in Model.Drop.ChildPages -%]
            [% if forloop.index == 1 -%]
            <li class="currently-hovered">
            [% else -%]
            <li>
                [% endif -%]
                <a id="tst_navMenu_[[forloop.index]]" href="[[childPage.Url]]" onclick="insite.nav.hideMenu();">[[childPage.Title]]</a>
                <!--
    <label for="nav-cat[[forloop.index]]" class="toggle-sub" onclick="insite.nav.goToSubnav(this)">►</label>
        -->
            </li>
            [% endfor -%]
        </ul>
    </div>
</li>
[% else -%]
[% if IsViewingMode == false -%]
<p>There was no page found for the content name '[[Model.RootPageName]]', edit this item to resolve the issue</p>
[% endif -%]
[% endif -%]
