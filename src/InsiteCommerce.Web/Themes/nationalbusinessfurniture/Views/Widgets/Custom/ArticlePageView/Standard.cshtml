<div>
    <div class="row">
        [% if Model.ArticleImageExists -%]
        <style type="text/css">
            .homepage__banner-bg {
                background-image: url('[[Model.ArticleImageUrl]]');
            }
        </style>
        <div class="row">
            <div class="medium-12 large-12 columns widget-1column no-margin [[Model.CssClass]]">
                <div class="banner banner--homepage">
                    <div class="banner__bg--homepage homepage__banner-bg"></div>
                    <div class="banner__content banner__content--bottomleft  banner__content--default">
                        <h1>[[Model.Drop.Title]]</h1>
                        <h4>[[Model.Drop.Author]]
                            <br/>[[Model.Drop.PublishDate]]
                        </h4>
                    </div>
                </div>
            </div>
        </div>
        [% else -%]
        <div class="medium-12 large-12 columns widget-1column article-container">
            <div class="row">
                <div class="medium-12 large-12 columns">
                    <h1 class="news-heading">[[Model.Drop.Title]]</h1>
                    <h4>[[Model.Drop.Author]]
                        <br/>[[Model.Drop.PublishDate]]
                    </h4>
                </div>
            </div>
        </div>
        [% endif -%]

        <div class="medium-12 large-12 columns widget-1column article-container">
            <div class="row">
                <div class="medium-12 large-12 columns">
                    <div class="news-page-full">
                        <div class="news-page-content">
                            [[Model.Drop.NewsContents]]
                        </div>
                    </div>
                    [% zone 'Content Below' %]
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        [% zone 'Content Below Full Width' %]  
    </div>
    <div class="row">
        <div class="medium-12 large-12 columns widget-1column article-container">
            <div class="row">
                <div class="medium-12 large-12 columns">
                    [% zone 'Comments View' %]
                </div>
            </div>
        </div>
        <div class="medium-12 large-12 columns widget-1column narrow-container featured-product">
            <div class="row">
                <div class="medium-12 large-12 columns">
                    <div class="about-author">
                        [% if Model.AuthorImageExists -%]
                        <div class="about-author__img-wrap">
                            <img class="about-author__img" src="[[Model.AuthorImageUrl]]" />
                        </div>
                        [% endif -%]
                        <div class="about-author__content">
                            <h3>[[Model.Drop.Author]]</h3>
                            [% if Model.InfoExists -%]
                            <div class="about-author__desc">
                                [[Model.AuthorInfo]]
                            </div>
                            [% endif -%]
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>