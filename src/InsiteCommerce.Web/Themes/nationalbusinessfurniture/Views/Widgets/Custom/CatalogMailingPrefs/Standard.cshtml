<div ng-controller="ContactUsController as vm" class="widget-contactform" ng-cloak>
    <div class="cf-form [[Model.CssClass]]">
        <form id="contactUsForm[[Model.ContentKey]]" action="[% urlFor '/ContactUs/Submit?EmailTo='%][[Model.EmailToValue]]" method="post">
            <div class="required-msg"><span class="redTxt">*</span> [% translate 'Required' %]</div>
            <div class="cf-form-firstname">
                <label for="firstName[[Model.ContentKey]]">[% translate 'First Name' %] <span class="redTxt">*</span></label>
                <input type="text" name="FirstName" id="firstName[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-lastname">
                <label for="lastName[[Model.ContentKey]]">[% translate 'Last Name' %] <span class="redTxt">*</span></label>
                <input type="text" name="LastName" id="lastName[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-company">
                <label for="company[[Model.ContentKey]]">[% translate 'Company' %]</label>
                <input type="text" name="Company" id="company[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-addressLine1">
                <label for="addressLine1[[Model.ContentKey]]">[% translate 'Address Line 1' %] <span class="redTxt">*</span></label>
                <input type="text" name="AddressLine1" id="addressLine1[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-addressLine2">
                <label for="addressLine2[[Model.ContentKey]]">[% translate 'Address Line 2' %]</label>
                <input type="text" name="AddressLine2" id="addressLine2[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-city">
                <label for="city[[Model.ContentKey]]">[% translate 'City' %] <span class="redTxt">*</span></label>
                <input type="text" name="City" id="city[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-state">
                <label for="state[[Model.ContentKey]]">[% translate 'State' %] <span class="redTxt">*</span></label>
                <input type="text" name="State" id="state[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-zip">
                <label for="zip[[Model.ContentKey]]">[% translate 'Zip' %] <span class="redTxt">*</span></label>
                <input type="text" name="Zip" id="zip[[Model.ContentKey]]" />
            </div>   
            <div class="cf-form-prioritycode">
                <label for="priorityCode[[Model.ContentKey]]">[% translate 'Priority Code' %] <span class="redTxt">*</span></label>
                <input type="text" name="PriorityCode" id="priorityCode[[Model.ContentKey]]" />
            </div>
            <div class="cf-form-topic">
                <label for="topic[[Model.ContentKey]]">[% translate 'Topic' %] <span class="redTxt">*</span></label>
                <select id="topic[[Model.ContentKey]]" name="Topic" data-val-required="[[Model.TopicIsRequiredErrorMessage]]" data-val="true">
                    <option value="">[% translate 'Select Topic' %]</option>
                    [% for topic in Model.Topics -%]
                    <option>[[topic]]</option>
                    [% endfor -%]
                </select>
                <span data-valmsg-replace="true" data-valmsg-for="Topic"></span>
            </div>            
            <div ng-show="!vm.submitted" class="btns">
                <button id="tst_contactUsPage_send" type="submit" ng-click="vm.submit($event)" class="btn primary btn-send">[% translate 'Send' %]</button>
            </div>
            <div ng-show="vm.submitted" id="tst_contactUsPage_successMessage" class="successMessage">
                [[Model.SuccessMessage]]
            </div>
        </form>
    </div>
</div>