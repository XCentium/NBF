<div ng-controller="NbfContactUsSpanishController as vm" class="widget-contactform" ng-cloak>
    <div class="cf-form [[Model.CssClass]]">
        <form id="contactUsSpanishForm" method="post">
            <div class="required-msg"><span class="redTxt">*</span> [[Model.RequiredText]]</div>
            <div class="row cf-form-firstname">
                <label for="name[[Model.ContentKey]]">[[Model.NamePrompt]] <span class="redTxt">*</span></label>
                <input name="Name" data-rule-required="true" data-msg-required="Se requiere [[Model.NamePrompt]]" data-val="true" type="text" ng-model="vm.contactUsForm.Name" id="name[[Model.ContentKey]]" />
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Name"></span>
            </div>
            <div class="row cf-form-company">
                <label for="company[[Model.ContentKey]]">[[Model.CompanyPrompt]]</label>
                <input name="Company" type="text" ng-model="vm.contactUsForm.Company" id="company[[Model.ContentKey]]" />
            </div>
            <div class="row cf-form-zip">
                <label for="zip[[Model.ContentKey]]">[[Model.ZipPrompt]] <span class="redTxt">*</span></label>
                <input name="Zip" data-rule-required="true" data-msg-required="Se requiere [[Model.ZipPrompt]]" data-val="true" type="text" ng-model="vm.contactUsForm.Zip" id="zip[[Model.ContentKey]]" />
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Zip"></span>
            </div>
            <div class="row cf-form-requestoremail">
                <label for="requestoremail[[Model.ContentKey]]">[[Model.EmailPrompt]] <span class="redTxt">*</span></label>
                <input name="RequestorEmail" data-rule-required="true" data-msg-required="Se requiere [[Model.EmailPrompt]]" data-val="true" type="text" ng-model="vm.contactUsForm.RequestorEmail" id="requestoremail[[Model.ContentKey]]"
                       data-rule-regex="[[Model.EmailAddressRegexPattern]]"
                       data-msg-regex="Email is not in correct format" />
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="RequestorEmail"></span>
            </div>
            <div class="row cf-form-requestorphone">
                <label for="requestorphone[[Model.ContentKey]]">[[Model.PhonePrompt]] <span class="redTxt">*</span></label>
                <input name="Phone" data-rule-required="true" data-msg-required="Se requiere [[Model.PhonePrompt]]" data-val="true" type="text" ng-model="vm.contactUsForm.RequestorPhone" id="requestorphone[[Model.ContentKey]]"
                       data-rule-regex="[[Model.PhoneRegexPattern]]"
                       data-msg-regex="[[Model.PhonePrompt]] no en formato correcto" />
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="RequestorPhone"></span>
            </div>
            <div class="row cf-form-contactmethod">
                <label for="contactmethod[[Model.ContentKey]]">[[Model.ContactMethodPrompt]] <span class="redTxt">*</span></label>
                <select name="ContactMethod" data-rule-required="true" data-msg-required="Se requiere [[Model.ContactMethodPrompt]]" data-val="true" id="contactmethod[[Model.ContentKey]]" ng-model="vm.contactUsForm.ContactMethod">
                    <option value="">Seleccionar el método de contacto</option>
                    [% for item in Model.ContactMethods -%]
                    <option>[[item]]</option>
                    [% endfor -%]
                </select>
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="ContactMethod"></span>
            </div>
            <div class="row cf-form-ordernumber">
                <label for="ordernumber[[Model.ContentKey]]">[[Model.OrderNumberPrompt]]</label>
                <input name="OrderNumber" type="text" ng-model="vm.contactUsForm.OrderNumber" id="ordernumber[[Model.ContentKey]]" />
            </div>
            <div>
                <input style="display:none" type="text" ng-model="vm.contactUsForm.EmailTo" id="emailTo[[Model.ContentKey]]" ng-init="vm.contactUsForm.EmailTo='[[Model.EmailToValue]]'" />
            </div>
            <div class="row cf-form-prioritycode">
                <label for="priorityCode[[Model.ContentKey]]">[[Model.PriorityCodePrompt]]</label>
                <input name="PriorityCode" type="text" ng-model="vm.contactUsForm.PriorityCode" id="priorityCode[[Model.ContentKey]]" />
            </div>
            <div class="row cf-form-subject">
                <label for="subject[[Model.ContentKey]]">[[Model.SubjectPrompt]] <span class="redTxt">*</span></label>
                <select name="Subject" data-rule-required="true" data-msg-required="Se requiere [[Model.SubjectPrompt]]" data-val="true" id="subject[[Model.ContentKey]]" ng-model="vm.contactUsForm.Subject">
                    <option value="">Seleccionar asunto</option>
                    [% for item in Model.SubjectOptions -%]
                    <option>[[item]]</option>
                    [% endfor -%]
                </select>
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Subject"></span>
            </div>
            <div class="row cf-form-comments">
                <label for="comments[[Model.ContentKey]]">[[Model.CommentsPrompt]]</label>
                <textarea name="Comments" type="text" ng-model="vm.contactUsForm.Comments" id="comments[[Model.ContentKey]]" ></textarea>
            </div>
            <div class="row cf-form-sendmeupdates">
                <input name="SendMeUpdates" type="checkbox" ng-model="vm.contactUsForm.SendMeUpdates" id="sendmeupdates[[Model.ContentKey]]" /><span>[[Model.EmailMeText]]</span>
            </div>
            <div ng-show="!vm.submitted" class="btns">
                <button id="tst_contactUsFormPage_send" ng-click="vm.sendEmail($event)" class="btn primary btn-send">[[Model.SubmitButtonText]]</button>
            </div>
            <div ng-show="vm.submitted" id="tst_contactUsFormPage_successMessage" class="successMessage">
                [[Model.SuccessMessage]]
            </div>
        </form>
    </div>
</div>