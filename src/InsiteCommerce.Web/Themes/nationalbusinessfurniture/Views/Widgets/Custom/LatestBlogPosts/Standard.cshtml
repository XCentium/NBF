
<style type="text/css">
    .blog-1 {
        background-image: url('/userfiles/images/callouts/1200x480.gif');
    }

    .blog-2 {
        background-image: url('https://assets.iamsteve.me/placeholder/1.jpg');
    }

    .blog-3 {
        background-image: url('/userfiles/images/callouts/1200x480.gif');
    }
</style>
<div class="row">
    <div class="medium-12 large-12 columns widget-1column narrow-container">
        <div class="row">
            <div class="medium-12 large-12 columns widget-1column">
                <div class="latest-blog-title">
                    <h2>Latest Blog Posts</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="latest-blog medium-12 large-12 columns widget-1column no-margin [[Model.CssClass]]">
        <div class="latest-blog__container">

            [% for page in Model.Drop.PageLinks -%]
            <div class="latest-blog__item">
                <a href="[[page.Url]]">
                    <div class="latest-blog__image blog-[[page.Number]]">
                    </div>
                    <div class="latest-blog__desc">
                        <h4>[[page.Title]]</h4>
                        <p>[[page.Summary]]</p>
                    </div>
                </a>
            </div>
            [% endfor -%]            
        </div>
    </div>
</div>
