<div ng-controller="ProductDetailController as ctrl" ng-cloak>
    <isc-catalog-breadcrumb ng-show="ctrl.product" breadcrumbs="ctrl.breadCrumbs"></isc-catalog-breadcrumb>
    <div class="medium-12 large-12 columns widget-1column narrow-container product-details">
        <div class="row">
            <div class="row pd-grid isc-productContainer">
                <div class="detail-info">
                    <div class="small-12 column medium-6 detail-image">
                        <isc-product-images ng-if="ctrl.product" product="ctrl.product"></isc-product-images>
                        <div class="image-buttons">
                            <button class="btn btn-secondary" ng-if="ctrl.product && ctrl.product.unspsc !== '0000'" ng-click="ctrl.show360()"><i class="ico-ViewIcon"></i> 360 View</button>
                            <button ng-show="ctrl.product.properties['videoUrl']" class="btn btn-secondary" ng-click="ctrl.showVideo()"><i class="ico-SmallplaybuttonIcon"></i> Product Video</button>
                        </div>
                    </div>
                    <div class="name-price small-12 column medium-6">
                        <h1>{{ctrl.product.shortDescription}}</h1>
                        <isc-product-name product="ctrl.product" no-link="true"></isc-product-name>
                        <div class="item-block__product__price-wrap">
                            <div class="item-block__product__price">
                                <isc-product-price product="ctrl.product" ng-cloak></isc-product-price>
                                <isc-product-price-saving product="ctrl.product" ng-cloak></isc-product-price-saving>
                            </div>
                            <div ng-if="ctrl.isAttributeValue('GSA', 'Yes');" class="item-block__product__flag gsa">
                                GSA
                            </div>
                        </div>
                        <div class="item-block__product__ships-today" ng-if="ctrl.isAttributeValue('Ships Today', 'Yes');"><span class="ico-Truck"></span> Ships Today!</div>

                        <div class="item-block__product__col-2 clearfix">
                            <div class="col-1">
                                <isc-quantity-break-pricing product-id="ctrl.product.id" block="optional" break-prices="ctrl.product.pricing.unitRegularBreakPrices">
                                </isc-quantity-break-pricing>
                            </div>
                            <div class="col-2">
                                <div class="item-block__product__reviews"><div class="rating"></div>4.8(5 Reviews)</div>
                                <a href="#reviews">Read 5 reviews</a>
                                <a href="#">Write a Review</a>
                            </div>
                        </div>
                        <div class="item-block__product__samples-link">
                            <strong>Available Colors/Finishes</strong> <a href="#" data-reveal-id="swatchform">Order Free Samples</a>
                        </div>                        
                        <div class="item-block__product__swatches">
                            <div class="item-block__product__swatches__label" ng-repeat-start="styleTrait in ctrl.styleTraitFiltered | orderBy: 'sortOrder'">{{styleTrait.nameDisplay}}:</div>
                            <ul ng-repeat-end>
                                <li ng-class="{'active': (ctrl.styleSelection[$parent.$index] && ctrl.styleSelection[$parent.$index].styleTraitValueId  == style.styleTraitValueId)}" ng-repeat="style in styleTrait.styleValues | orderBy: 'sortOrder' track by style.styleTraitValueId">
                                    <img ng-click="ctrl.selectInsiteStyleDropdown(styleTrait.nameDisplay, style.styleTraitValueId, $parent.$index);" ng-src="https://s7d9.scene7.com/is/image/NationalBusinessFurniture/{{ctrl.getSwatchImageNameFromStyleTraitValueId(style.styleTraitName, style.value)}}?hei=200&id=5-zsy2&fmt=jpg&fit=constrain,1&wid=344&hei=344" alt="{{style.valueDisplay}}" />
                                </li>
                            </ul>
                        </div>
                       
                        <div class="pd-cm-wrap">
                            <div ng-show="ctrl.product.isConfigured && ctrl.product.configurationDto && ctrl.product.configurationDto.isKit">
                                <div ng-repeat="section in ctrl.product.configurationDto.sections" class="pd-kit">
                                    <div ng-show="section.sectionName" class="pd-kit-name" style="font-weight: bold">{{section.sectionName}}:</div>
                                    <div ng-repeat="option in section.options" class="pd-kit-value">
                                        {{option.description}}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="detail-options small-12 column medium-6">
                        <div class="panel" ng-show="ctrl.product.isConfigured && ctrl.product.configurationDto && !ctrl.product.configurationDto.isKit || ctrl.product.styleTraits.length > 0">
                            <div class="row collapse detail-options-wrap">
                                <!-- Configuration part -->
                                <div ng-show="ctrl.product.isConfigured && ctrl.product.configurationDto != null && !ctrl.product.configurationDto.isKit">
                                    <div ng-repeat="section in ctrl.product.configurationDto.sections" class="pd-kit">
                                        <span>{{section.sectionName}}</span>
                                        <select ng-model="ctrl.configurationSelection[$index]" name="tst_productDetail_configurationSection_{{section.sectionName}}" ng-change="ctrl.configChanged()"
                                                ng-options="option.description for option in section.options track by option.sectionOptionId">
                                            <option value="">Select {{section.sectionName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Style part -->
                                <div class="small-12 columns pd-style-opt" ng-repeat="styleTrait in ctrl.styleTraitFiltered | orderBy: 'sortOrder'">
                                    <span>{{styleTrait.nameDisplay}}</span>
                                    <select name="{{'tst_styleSelect_' + styleTrait.name}}" ng-model="ctrl.styleSelection[$index]" ng-change="ctrl.styleChange(ctrl.styleSelection[$index], {{$index}})"
                                            ng-options="style.valueDisplay for style in styleTrait.styleValues | orderBy: 'sortOrder' track by style.styleTraitValueId">
                                        <option value=""> {{styleTrait.unselectedValue ? "" : "Select"}} {{styleTrait.unselectedValue ? styleTrait.unselectedValue : styleTrait.nameDisplay}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="right small-12 detail-add">
                            <div class="small-12 fc-um">
                                <label ng-if="ctrl.settings.alternateUnitsOfMeasure && ctrl.product.productUnitOfMeasures.length > 1" class="small-12">[% translate 'U/M' %]:</label>
                                <isc-unit-of-measure-select-list product="ctrl.product" alternate-units-of-measure="{{ctrl.settings.alternateUnitsOfMeasure}}"
                                                                 display-pack="true" change-unit-of-measure="ctrl.changeUnitOfMeasure(ctrl.product)"></isc-unit-of-measure-select-list>
                            </div>
                            <div class="fc-qty" ng-if="ctrl.product.canEnterQuantity || ctrl.configurationCompleted || ctrl.styleSelectionCompleted && !ctrl.product.canConfigure">
                                <label style="display:none;" class="small-12">[% translate 'QTY_quantity' %]</label>
                                <input id="tst_productDetail_qtyOrdered" type="text" value="1" class="small-12 numerictextbox" ng-model="ctrl.product.qtyOrdered">
                            </div>
                            <span class="field-validation-error" ng-if="ctrl.showUnitError"><span ng-bind="ctrl.parentProduct.unitOfMeasureDisplay"></span>[% siteMessage 'StyledProduct_WrongUnitOfMeasure' %]</span>
                            <div class="pd-buttons">
                                <div class="small-12 primary-button">
                                    <button ng-show="(ctrl.product.availability.messageType != 2 || ctrl.product.canBackOrder) && ctrl.product.allowedAddToCart && (ctrl.product.canAddToCart || ctrl.configurationCompleted || ctrl.styleSelectionCompleted && !ctrl.product.canConfigure)"
                                            id="tst_productDetail_addToCart" ng-click="ctrl.addToCart(ctrl.product)"
                                            role="button" class="btn primary btn-add-to-cart" ng-disabled="!ctrl.product.qtyOrdered || ctrl.product.qtyOrdered == 0 || ctrl.showUnitError || ctrl.addingToCart">
                                        <span class="ico-CartIcon"></span> [% translate 'Add To Cart' %]
                                    </button>
                                </div>

                                <div ng-if="ctrl.product.canConfigure && (ctrl.product.styleTraits.length === 0 || ctrl.styleSelectionCompleted)" class="small-12 primary-button">
                                    <a id="tst_productDetail_configure" href="[% urlFor '/Configuration/Configure' %]/{{ctrl.product.erpNumber}}" role="button" class="btn primary btn-configure">[% translate 'Configure' %]</a>
                                </div>
                                <div class="small-12 primary-button">
                                    <a id="tst_productDetail_productSubscription" href="" class="btn primary btn-product-subscription"
                                       ng-show="ctrl.product.isSubscription && (ctrl.product.availability.messageType != 2 || ctrl.product.canBackOrder) && ctrl.product.allowedAddToCart && (ctrl.product.canAddToCart || ctrl.configurationCompleted || ctrl.styleSelectionCompleted && !ctrl.product.canConfigure)"
                                       ng-click="ctrl.openProductSubscriptionPopup(ctrl.product)"
                                       ng-disabled="!ctrl.product.qtyOrdered || ctrl.product.qtyOrdered == 0 || ctrl.showUnitError">
                                        [% translate 'Delivery Schedule' %]
                                    </a>
                                </div>
                            </div>                            
                                <a id="tst_productDetail_addToWishList" ng-if="ctrl.isAuthenticated" ng-class="{'in-favorites': ctrl.product.properties['isFavorite'] == 'true' } "
                                  ng-click="ctrl.toggleFavorite(ctrl.product)" role="button"
                                  class="btn secondary btn-add-to-list" href="javascript:;">{{ctrl.product.properties['isFavorite'] == "false" ? "Add To Favorites" : "Remove From Favorites"}}</a>
                            </div>
                        <div class="small-12 secondary-button">
                            <div ng-show="ctrl.product" class="small-12 detail-share">
                                <a id="tst_productDetail_share" href="javascript:;" class="pd-zoom" data-reveal-id="TellAFriendDialogContainer">[% translate 'Share' %]</a>
                                <isc-tell-a-friend-popup product="ctrl.product" data-reveal></isc-tell-a-friend-popup>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-details-page">
                        <div class="small-12 column">
                            <section class="accordion">
                                <div>
