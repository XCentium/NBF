{% comment %}
<span ng-if="!product.quoteRequired && product.pricing && !product.pricing.requiresRealTimePrice && vm.showPriceSaving(product) || vm.showPriceSavingForOrderHistory(product)" class="price price-saving">
    <span>[% translate 'Regular Price:' %]</span>
    <span ng-bind="vm.unitListPriceDisplay"></span><span ng-if="!(!vm.showSavingsAmount && !vm.showSavingsPercent)">, [% translate 'you save' %] </span>
    <span id="tst_productPriceSaving_promotionAmount_{{::product.id}}" ng-if="vm.showSavingsAmount" ng-bind="vm.getSavingsAmount() | currency: currencySymbol"></span>
    <span ng-if="vm.showSavingsAmount && vm.showSavingsPercent">({{vm.getSavingsPercent()}}%)</span>
    <span ng-if="!vm.showSavingsAmount && vm.showSavingsPercent">{{vm.getSavingsPercent()}}%</span>
</span>
{% endcomment %}
<!--
<span class="strike ori-price-tag">Was $200.00</span>
-->
<span class="strike ori-price-tag" ng-if="!product.quoteRequired && product.pricing && !product.pricing.requiresRealTimePrice && vm.showPriceSaving(product) || vm.showPriceSavingForOrderHistory(product)">Was {{vm.unitListPriceDisplay}}</span>
<div ng-if="vm.displaySavingsPercent === true && vm.showSavingsAmount && vm.showSavingsPercent" class="item-block__product__flag save">
    SAVE {{vm.getSavingsPercent()}}%
</div>